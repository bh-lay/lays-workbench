.flip-enter-active
  opacity 0
  transform rotate3d(1, 1, 0, 20deg)
  transition opacity .2s ease-out, transform .12s ease
.flip-enter-to
  opacity 1
  transform rotate3d(1, 1, 0, 0)

.flip-leave-active
  transition opacity .1s ease-in, transform .05s ease
  opacity 1
  transform rotate3d(1, 1, 0, 0)
.flip-leave-to
  opacity 0
  transform rotate3d(1, 1, 0, 20deg)