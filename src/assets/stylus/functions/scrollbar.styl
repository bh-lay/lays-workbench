scrollbar(backgroundColor)
  &::-webkit-scrollbar
    width 12px
    height 12px
    background-color transparent
  &::-webkit-scrollbar-track {
    background-color transparent
  }
  &::-webkit-scrollbar-thumb
    background-color light(backgroundColor) ? darken(backgroundColor, 5) : lighten(backgroundColor, 5)
    background-clip content-box
    border-radius 6px
    border 4px solid transparent
  &:hover::-webkit-scrollbar-thumb
    background-color light(backgroundColor) ? darken(backgroundColor, 20) : lighten(backgroundColor, 20)
  &::-webkit-scrollbar-thumb:hover
    border-width 3px